<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  
  <style>
    body {
      font-family: {{style.fontFamily}};
      font-size: {{style.fontSize}};
      line-height: 1.6;
      color: #333;
      background: white;
      padding: 20px;
    }

    .title-page {
      text-align: center;
      margin-bottom: 2em;
    }

    .message {
      margin: 1em 0;
      padding: 1em;
      border-left: 4px solid #ccc;
      background: #f9f9f9;
    }

    .message.user {
      border-left-color: #2196f3;
      background: #e3f2fd;
    }

    .message.assistant {
      border-left-color: #9c27b0;
      background: #f3e5f5;
    }
  </style>

  <!-- Simple ready script without MathJax -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Simple template loaded, marking as ready...');
      window.mathjaxReady = true;
      console.log('Template marked as ready');
    });
  </script>
</head>
<body>
  <div class="title-page">
    <h1>{{title}}</h1>
    <p>{{totalMessages}} messages</p>
    {{#if generated}}
    <p>Generated on {{generated}}</p>
    {{/if}}
  </div>

  {{#each messages}}
  <div class="message {{role}}">
    <strong>{{role}}:</strong> {{#if timestamp}}({{timestamp}}){{/if}}
    {{#if content.text}}
    <div>{{{content.text}}}</div>
    {{/if}}
  </div>
  {{/each}}

  <div style="text-align: center; margin-top: 2em; color: #666;">
    End of conversation
  </div>
</body>
</html>